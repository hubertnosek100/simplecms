<body class="scms-body">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ"
        crossorigin="anonymous">
    <div class="container pt-5">
        <div class="d-flex justify-content-between">
            <div>
                <h2>Add new healthcek</h2>
                <p>...</p>
            </div>
        </div>
        <hr />
        <div class="pt-2 ">
            <div class="d-flex justify-content-center">
                <fieldset class="form-fieldset w-100">

                    <form action="/newlang" method="POST" id="newMonitoringForm">
                            <div class="form-group">
                            <label for="url">Url</label>
                            <input name="url" type="text" class="form-control" id="url" placeholder="http://image.io/pl">
                        </div>
                        <div class="d-flex flex-row-reverse">
                             
                            <button type="button" class="mx-1 btn btn-primary scms-btn scms-primary">
                                <i class="fas fa-plus"></i>
                                Add healthcheck
                            </button>

                            <button id="healtcheck-btn" type="submit" class="mx-1 btn btn-primary scms-btn scms-primary">
                                    <i class="fas fa-question"></i>
                                    Try healthcheck
                                </button>
                        </div>

                    </form>
                </fieldset>

            </div>
            <div  class="d-none  justify-content-center " >
                    <fieldset id="callback" class="form-fieldset w-100">
                    </fieldset>
                </div>  

            <%- include stickymenu.ejs %>

        </div>
    </div>
</body>

<script>
    app.monitoring.new.init();
</script>